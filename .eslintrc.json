{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [ 
        "eslint:recommended",
        "plugin:prettier/recommended",
        "plugin:@wordpress/eslint-plugin/recommended"
    ],
    "plugins": ["prettier"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": [ 
            "error",
            {
          "endOfLine": "auto"
            }
        ]
    }
}
